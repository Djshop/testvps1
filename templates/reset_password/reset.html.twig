{% extends 'base.html.twig' %}

{% block title %}DJ SHOP - Réinitialisation mot de passe
{% endblock %}

{% block body %}

	<div class="container containerLogin">
		<div class="loginBody">
			<div class="leftBody">
				<img src="{{ asset("image/xbox-controller.jpg")}}" alt="">
			</div>
			<div class="rightBody">
				<div class="formLogin">
					<div class="headLogin">
						<p>Réinitialisation mot de passe</p>
					</div>
				{% endif %}
				{% for level, messages in app.flashes %}
					{% for message in messages %}
						<div class="alert text-center alert-{{ level }}">
							{{ message|raw }}
						</div>
					{% endfor %}
				{% endfor %}

				<div class="formRequest formRequestReset">

					{{ form_start(resetForm) }}
					{{ form_row(resetForm.plainPassword) }}
					<button class="btnConnexion">Réinitialiser mot de passe</button>
					{{ form_end(resetForm) }}

				</div>
			</div>

		</div>

	</div>
</div>{% endblock %}
